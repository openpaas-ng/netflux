{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": [ "es2017", "dom" ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "types": ["node", "text-encoding"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["**/proto/index.d.ts"]
}
